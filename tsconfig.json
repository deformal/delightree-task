{
  "exclude": [
    "dist"
  ],
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "Node18",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@delightree-task/types": [
        "./src/types/types"
      ],
      "@delightree-task-models/*": [
        "./src/infra/mongo/schemas/*"
      ],
    }
  }
}