{
  "name": "delightree-task",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "start": "node ./dist/main.js",
    "dev": "nodemon --ext ts --exec ts-node ./src/main.ts",
    "infra:dev:run": "docker compose -p delightree-task --env-file ./.env -f ./docker/docker-compose.yml up --build --force-recreate --remove-orphans -d ",
    "infra:dev:stop": "docker compose -p delightree-task --env-file ./.env -f ./docker/docker-compose.yml --remove-orphans down",
    "infra:dev:clean": "docker compose -p delightree-task --env-file ./.env -f ./docker/docker-compose.yml down --remove-orphans -v"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "awilix": "^12.0.4",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "helmet": "^8.0.0",
    "mongoose": "^8.12.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "esbuild": "0.25.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
